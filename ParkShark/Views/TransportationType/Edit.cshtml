@model TransportationType
@{
    Layout = "_Header";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>Edit TransportationType</h3>
            </div>

            <div class="card-body">
                <form method="post" action="Edit">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" name="Name" class="form-control" value="@Model.Name" />
                    </div>

                    <div class="mb-3">
                        <label>HourlyRate</label>
                        <input type="text" name="HourlyRate" class="form-control" value="@Model.HourlyRate" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>